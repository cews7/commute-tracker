<% if current_user %>
<nav>
  <div class="nav-wrapper blue-bar no-border">
    <a class="brand-logo center">CommuteTracker</a>
    <ul id="nav-mobile" class="left hide-on-med-and-down">
      <li> <%= link_to "Welcome, #{current_user.first_name}!", root_path %></li>
      <li> <%= link_to "Create Commute", new_trip_path %> </li>
      <li><%= link_to "Logout", logout_path, method: :delete %></li>
    </ul>
  </div>
</nav>
<br>
<br>
<div class="container center">
  <iframe
  width="800"
  height="500"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/directions?key=<%="#{ENV['EMBEDDED_MAP_KEY']}"%>&origin=1017+Dogwood+Drive+Golden+CO
  &destination=3301+E+1st+Ave+Denver+CO+80206">
</iframe>
</div>

<div class="row">
  <div class="col s12">
    <div class="card proj-card">
      <div class="card-content">
        <h6>Past Commutes</h6>
        <% @commutes.each do |commute| %>
        <div class="row">
          <div class="col s8 comment-thing">
            <div class="card">
              <div class="card-content">
                <p class="black-text"><%= link_to "#{commute.commute_name}", trip_path %></p>
                <p class="right commute"><em>Origin:</em> <%= commute.address_one %> Destination: <%= commute.address_two %></p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
