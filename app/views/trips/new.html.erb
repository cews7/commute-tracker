<% if current_user %>
<div class="navbar-fixed">
  <nav class="blue-bar no-border">
    <div class="nav-wrapper">
      <a class="brand-logo center">CommuteTracker</a>
      <ul id="nav-mobile" class="left hide-on-med-and-down">
        <li> <%= link_to "Welcome, #{current_user.first_name}!", root_path %></li>
        <li> <%= link_to "Create Commute", new_trip_path %> </li>
        <li><%= link_to "Logout", logout_path, method: :delete %></li>
      </ul>
    </div>
  </nav>
</div>
<br>
<br>
<div class="container">
  <div class="row">
    <div class="col s1"><p></p></div>
    <div class="col s10">
      <div class="card form-card">
        <div class="card-content">
          <span class="card-title black-text">New Commute</span>
          <div class="login-form">
            <%= form_for @commute, url: {action: "create"} do |f| %>
            <%= f.label "commute name" %>
            <%= f.text_field :commute_name, placeholder: "Home to Work" %>
            <%= f.label "Origin Point" %>
            <%= f.text_field :address_one, placeholder: "street, city, state" %>
            <%= f.label "Destination" %>
            <%= f.text_field :address_two, placeholder: "street, city, state" %>
            <%= f.submit "Create Commute", class: "btn btn-color" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
